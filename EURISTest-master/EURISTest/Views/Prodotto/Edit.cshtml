    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Prodotto</legend>

        @Html.HiddenFor(model => model.ProdottoID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
